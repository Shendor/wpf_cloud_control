<Application x:Class="ElementsCloudTest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Menu.xaml">
    <Application.Resources>

        <LinearGradientBrush x:Key="borderBackground" EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.7">
            <GradientStop Color="#FF9AC3FF" Offset="0" />
            <GradientStop Color="#FF438CF8" Offset="1" />
        </LinearGradientBrush>

        <Style x:Key="borders" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource borderBackground}" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Width" Value="60" />
            <Setter Property="Height" Value="35" />
        </Style>

        <Style x:Key="text" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
        </Style>

    </Application.Resources>
</Application>
